<h1>お気に入り一覧</h1>
<section class="work-section" id="work">
  <header class="section-header clearfix">
    <div class="inner">
      <h2>Pick up Deck</h2>
      <ul class="tabs-nav">
        <li><a><%= link_to "お気に入り", like_decks_path %></a></li>
        <li><a><%= link_to "人気デッキ", popular_deck_path %></a></li>
        <li><a><%= link_to "注目デッキ", trend_deck_path %></a></li>
      </ul>
    </div>
  </header>  
</section>

<div class="container deck_index">
  <% @like_decks.each do |f| %>
    <h3><%= link_to f.deck_name ,deck_path(f.id) %></h3>
      <table border="1">
        <tbody>
          <tr>
            <td class="deck_image" rowspan="2">
              <% if f.image.attached? %>
                <%= image_tag f.image.variant(resize:'200x200').processed %>
              <% end %>
            </td>
          
            <th id="post_user"> 投稿者</th>
            <td colspan="2">
              <small>
                <%= f.user.user_name %>
              </small>
            </td>
          </tr>
          <tr>
            <th>投稿日</th>
            <td colspan="2"><%=f.created_at %></td>
          </tr>
          <tr>
            <td id="comment" colspan="3">
              <strong>コメント</strong></br>
              <small><%= f.deck_detail %></small>
            </td>
          </tr>
          </tbody>
      </table>
    <% end %>
</div>