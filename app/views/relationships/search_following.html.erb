<div class="container-fluid user-index">
  <div class="row whole-user-index clearfix">
    <div class="user-image-index">
      <div class="row">
         <%= image_tag('/images/MakeDecker3.jpeg', class:"make-decker3 col-10 offset-1") %>
      </div>
      <!--検索フォーム-->
      <div class="row">
        <div class="name-search col-10 offset-1"><h2 class="name-search-h2">デュエリストを検索</h2></div>
        <div class="col-1"></div>
      </div>
      <div class="row">
        <%= form_with url:search_following_path, method: :get, local:true,class:"user-search-box col-10 offset-1" do |search| %>
          <%= text_field_tag :search %>
          <%= search.submit '検索'%>
        <% end %>
        <div class="col-1"></div>
      </div>
          

      <% @following_searchs.each do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-3 offset-1">
              <%= link_to user_path(f.id),class:"link-color" do %>
                <div class="users-image-index"><%= attachment_image_tag f, :profile_image, :fill,120,120,fallback:'/images/no_image.jpg' %></div>
                  <%= f.user_name %>
              <% end %>
            </div>
            <div class="user-profile-index col-7">
              <h2>総フォロワー数      <%= f.followers.count %>人       総デッキ数      <%= f.decks.count %>個</h2>
                <div class="users-intro"><%= f.introduction %></div>
            </div>
                <div class="col-1"></div>
          </div>
        </div>
      <% end %>
      <%= paginate @following_searchs, class: "paginate" %>
    </div>
  </div>
</div>